<UserControl x:Class="RAM100_PRISM_2.Views.ManulControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAM100_PRISM_2.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="clr-namespace:RAM100_PRISM_2.Base" 
             xmlns:viewmodels="clr-namespace:RAM100_PRISM_2.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ManulControlViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="1280">
    <UserControl.Resources>

        <!-- 基础按钮样式 -->
        <Style x:Key="BaseTouchButton" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D6DBDF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#AEB6BF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F8F9F9"/>
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                <Setter Property="BorderBrush" Value="#EAEDED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 标准触摸按钮样式 -->
        <Style x:Key="TouchButton" TargetType="Button" BasedOn="{StaticResource BaseTouchButton}">
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="#000000"/>

        <!-- 触摸友好的文本框样式 -->
        <Style x:Key="TouchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 成功按钮样式 -->
        <Style x:Key="SuccessTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#219653"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#219653"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 危险按钮样式 -->
        <Style x:Key="DangerTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 主要操作按钮样式 -->
        <Style x:Key="PrimaryTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#21618C"/>
                </Trigger>
            </Style.Triggers>
        </Style>



    </UserControl.Resources>

    <Grid Margin="0, 0, 0, 0" Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：ScottPlot图表区域 -->
        <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Margin="5,5,5,5" Background="White" 
            Effect="{StaticResource ShadowEffect}" Grid.ColumnSpan="2">
            <WpfPlot Name="wpfPlot" Margin="15"/>
        </Border>

        <!-- 右侧：控制区域 -->
        <Grid Grid.Column="2" Margin="5,5,5,5" >
            <StackPanel>
                <!-- 设备状态区域 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White" Margin="5,0,5,10"
                    Effect="{StaticResource ShadowEffect}">
                    <StackPanel Margin="10, 5, 5, 0">
                        <TextBlock Text="设备状态" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,6"/>

                        <Grid Margin="0,0,0,5" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="运行状态：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" Fill="#27AE60" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="正常运行" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2"  Text="当前模式：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Grid.Column="3" Text="手动控制" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- 强度控制区 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White" Margin="5,0,5,10"
                    Effect="{StaticResource ShadowEffect}">
                    <StackPanel Margin="10, 5, 5, 5">
                        <TextBlock Text="强度控制" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,6"/>

                        <!-- 当前强度显示 -->
                        <Grid Margin="0,0,0,6" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 标签 -->
                            <TextBlock Grid.Column="0" Text="当前强度：" VerticalAlignment="Center" 
                                Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>

                            <!-- 数值显示区域 -->
                            <Border Grid.Column="1" Background="#E8F4FD" CornerRadius="4" Padding="8,4" 
                                VerticalAlignment="Center" Width="80">
                                <TextBlock Text="{Binding CurrentIntensity, StringFormat=F2}" 
                                   VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" 
                                   Foreground="#2980B9" TextAlignment="Center"/>
                            </Border>

                            <!-- 单位 -->
                            <TextBlock Grid.Column="2" Text="r" VerticalAlignment="Center" 
                                Margin="10,0,20,0" Foreground="#555555" FontSize="14"/>

                            <!-- 置零按钮 -->
                            <Button Grid.Column="4" Content="置零" Width="60" Height="32" Command="{Binding ZeroIntensityCommand}"
                                Style="{StaticResource TouchButton}" VerticalAlignment="Center" Margin="0, 0, 10, 0"/>
                        </Grid>

                        <!-- 设定强度输入 -->
                        <Grid Margin="0,0,0,6" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="设定强度：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" Text="{Binding TargetIntensity}" Margin="0,2" Height="32"
                                 VerticalContentAlignment="Center" Padding="10,0" FontSize="14"
                                 Style="{StaticResource TouchTextBox}"/>
                            <TextBlock Grid.Column="2" Text="%" VerticalAlignment="Center" Margin="10,0,0,0" 
                                   Foreground="#555555" FontSize="14"/>
                        </Grid>

                        <!-- 强度补偿控制 -->
                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="强度调整：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="-" Width="40" Height="40" Command="{Binding DecreaseIntensityCommand}"
                                    Style="{StaticResource TouchButton}" Margin="0,0,8,0"/>
                                <Border Background="#E8F4FD" CornerRadius="4" Padding="8,4" Width="60">
                                    <TextBox Text="{Binding IntensityStep, StringFormat=F2}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           FontWeight="SemiBold" FontSize="14" Foreground="#2980B9"/>
                                </Border>
                                <Button Content="+" Width="40" Height="40" Command="{Binding IncreaseIntensityCommand}"
                                    Style="{StaticResource TouchButton}" Margin="8,0,15,0"/>
                                <Button Content="应用" Width="80" Height="40" Command="{Binding ApplyIntensityCommand}"
                                    Style="{StaticResource PrimaryTouchButton}"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- 频率控制区 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White"
                    Effect="{StaticResource ShadowEffect}" Margin="5,0,5,10">
                    <StackPanel Margin="10, 5, 5, 5">
                        <TextBlock Text="频率控制" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,6"/>

                        <!-- 当前频率显示 -->
                        <Grid Margin="0,0,0,6" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="当前频率：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <Border Grid.Column="1" Background="#E8F4FD" CornerRadius="4" Padding="8,4" 
                                VerticalAlignment="Center" HorizontalAlignment="Left" Width="100">
                                <TextBlock Text="{Binding CurrentFrequency, StringFormat=F2}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" 
                                       Foreground="#2980B9" TextAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="Hz" VerticalAlignment="Center" Margin="110,0,0,0" 
                                   Foreground="#555555" FontSize="14"/>
                        </Grid>

                        <!-- 设定频率输入 -->
                        <Grid Margin="0,0,0,6" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="设定频率：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" Text="{Binding TargetFrequency}" Margin="0,2" Height="32"
                                 VerticalContentAlignment="Center" Padding="10,0" FontSize="14"
                                 Style="{StaticResource TouchTextBox}"/>
                            <TextBlock Grid.Column="2" Text="Hz" VerticalAlignment="Center" Margin="10,0,0,0" 
                                   Foreground="#555555" FontSize="14"/>
                        </Grid>

                        <!-- 频率补偿控制 -->
                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="频率调整：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="-" Width="40" Height="40" Command="{Binding DecreaseFrequencyCommand}"
                                    Style="{StaticResource TouchButton}" Margin="0,0,8,0"/>
                                <Border Background="#E8F4FD" CornerRadius="4" Padding="8,4" Width="60">
                                    <TextBox Text="{Binding FrequencyStep, StringFormat=F1, Mode=TwoWay}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           FontWeight="SemiBold" FontSize="14" Foreground="#2980B9"/>
                                </Border>
                                <Button Content="+" Width="40" Height="40" Command="{Binding IncreaseFrequencyCommand}"
                                    Style="{StaticResource TouchButton}" Margin="8,0,15,0"/>
                                <Button Content="应用" Width="80" Height="40" Command="{Binding ApplyFrequencyCommand}"
                                    Style="{StaticResource PrimaryTouchButton}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White"
                Effect="{StaticResource ShadowEffect}" Margin="5">
                    <StackPanel Margin="5, 5, 5, 0">


                        <!-- 启动/停止控制 -->
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="启动" Width="120" Height="50" Command="{Binding StartCommand}"
                                Style="{StaticResource SuccessTouchButton}" Margin="0,0,10,0" FontSize="16"/>
                            <Button Grid.Column="1" Content="停止" Width="120" Height="50" Command="{Binding StopCommand}"
                                Style="{StaticResource DangerTouchButton}" Margin="10,0,0,0" FontSize="16"/>
                        </Grid>
                    </StackPanel>
                </Border>
                <!-- 系统控制区 -->
            </StackPanel>
        </Grid>
        
    </Grid>



</UserControl>
