<UserControl x:Class="RAM100_PRISM_2.Views.AutoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:presentation="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAM100_PRISM_2.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewmodels="clr-namespace:RAM100_PRISM_2.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AutoControlViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="1280">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- 基础按钮样式 -->
        <Style x:Key="BaseTouchButton" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                         Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" 
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D6DBDF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#AEB6BF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F8F9F9"/>
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                <Setter Property="BorderBrush" Value="#EAEDED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 标准触摸按钮样式 -->
        <Style x:Key="TouchButton" TargetType="Button" BasedOn="{StaticResource BaseTouchButton}">
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="#000000"/>

        <!-- 触摸友好的文本框样式 -->
        <Style x:Key="TouchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 成功按钮样式 -->
        <Style x:Key="SuccessTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#219653"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#219653"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 危险按钮样式 -->
        <Style x:Key="DangerTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 主要操作按钮样式 -->
        <Style x:Key="PrimaryTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#21618C"/>
                </Trigger>
            </Style.Triggers>
        </Style>



    </UserControl.Resources>

    <Grid Margin="0" Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：ScottPlot图表区域 -->
        <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Margin="5" Background="White" 
                Effect="{StaticResource ShadowEffect}">
            <WpfPlot Name="wpfPlot" Margin="15"/>
        </Border>

        <!-- 右侧：控制区域 -->
        <ScrollViewer Grid.Column="1" Margin="5" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <StackPanel>
                <!-- 设备状态区域 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White" Margin="0,0,0,10"
                        Effect="{StaticResource ShadowEffect}">
                    <StackPanel Margin="15">
                        <TextBlock Text="设备状态" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,5" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="运行状态：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,5,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" Fill="#27AE60" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="正常运行" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,5" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="当前模式：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="自动控制" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                        </Grid>

                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="当前配方：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding SelectedPresetFileName, Mode=OneWay}" VerticalAlignment="Center" 
                                       FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 配方选择区域 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White" Margin="0,0,0,10"
                        Effect="{StaticResource ShadowEffect}">
                    <StackPanel Margin="15">
                        <TextBlock Text="配方选择" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,12"/>

                        <!-- 配方下拉选择 -->
                        <Grid Margin="0,0,0,12" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="选择配方：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding PresetFiles}" SelectedItem="{Binding SelectedPresetFile, Mode=TwoWay}"
                                      DisplayMemberPath="Name" Margin="0,2" Height="32" VerticalContentAlignment="Center"
                                      FontSize="14" Foreground="Black" IsEnabled="{Binding IsNotRunning}">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <Button Grid.Column="2" Content="刷新" Command="{Binding RefreshPresetsCommand}" 
                                    Style="{StaticResource TouchButton}" Margin="10,0,0,0" Height="32" Width="60"/>
                        </Grid>

                        <!-- 配方详情显示 -->
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4" Padding="10" 
                                Background="#F8F9F9" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="配方详情" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>

                                <ItemsControl ItemsSource="{Binding SelectedPresetDetails}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="时间段 " VerticalAlignment="Center" Foreground="#555555" Margin="2,0,0,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Index}" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2980B9" Margin="10,0,0,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Description}" VerticalAlignment="Center" Foreground="#555555" Margin="15,0,0,0"/>
                                                <TextBlock Grid.Column="3" Text="{Binding Duration}" VerticalAlignment="Center" Foreground="#555555" Margin="15,0,0,0"/>
                                                <TextBlock Grid.Column="4" Text="分钟" VerticalAlignment="Center" Foreground="#555555" Margin="2,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                
                            </StackPanel>
                        </Border>

                        <!-- 当前执行状态 -->
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4" Padding="10" 
                                Background="{Binding StatusBackground}" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="执行状态" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="当前阶段：" VerticalAlignment="Center" Foreground="#555555"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentStage}" VerticalAlignment="Center" 
                                               FontWeight="SemiBold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="剩余时间：" VerticalAlignment="Center" Foreground="#555555"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TimeRemaining}" VerticalAlignment="Center" 
                                               FontWeight="SemiBold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                                </Grid>

                                <ProgressBar Value="{Binding ProgressPercentage}" Maximum="100" Height="10" 
                                             Margin="0,10,0,0" Foreground="#3498DB"/>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="当前频率:" VerticalAlignment="Center" Foreground="#555555"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentFrequency, StringFormat='{}{0}Hz'}" 
                                               VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="当前强度:" VerticalAlignment="Center" Foreground="#555555"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentIntensity, StringFormat='{}{0}%'}" 
                                               VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="当前加速度:" VerticalAlignment="Center" Foreground="#555555"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentAcceleration, StringFormat='{}{0}m/s²'}" 
                                               VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#2C3E50" Margin="10,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 控制按钮 -->
                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="开始" Command="{Binding StartCommand}" 
                                    Style="{StaticResource SuccessTouchButton}" Margin="0,0,5,0"
                                    IsEnabled="{Binding CanStart}"/>
                            <Button Grid.Column="1" Content="停止" Command="{Binding StopCommand}" 
                                    Style="{StaticResource DangerTouchButton}" Margin="5,0,0,0"
                                    IsEnabled="{Binding CanStop}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 系统信息区域 -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Background="White"
                        Effect="{StaticResource ShadowEffect}">
                    <StackPanel Margin="15">
                        <TextBlock Text="系统信息" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="运行时间：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding TotalRunTime}" VerticalAlignment="Center" 
                                       FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                        </Grid>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="已完成：" VerticalAlignment="Center" Foreground="#555555" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding CompletedStages}" VerticalAlignment="Center" 
                                       FontWeight="SemiBold" FontSize="14" Foreground="#2C3E50"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
