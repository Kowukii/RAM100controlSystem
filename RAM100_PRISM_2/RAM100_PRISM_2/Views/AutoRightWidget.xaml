<UserControl x:Class="RAM100_PRISM_2.Views.AutoRightWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAM100_PRISM_2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="420">


    <UserControl.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
           
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- 基础按钮样式 -->
        <Style x:Key="BaseTouchButton" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                         Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" 
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D6DBDF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#AEB6BF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F8F9F9"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="#EAEDED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 标准触摸按钮样式 -->
        <Style x:Key="TouchButton" TargetType="Button" BasedOn="{StaticResource BaseTouchButton}">
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="#000000"/>

        <!-- 触摸友好的文本框样式 -->
        <Style x:Key="TouchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 成功按钮样式 -->
        <Style x:Key="SuccessTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#219653"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#219653"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 危险按钮样式 -->
        <Style x:Key="DangerTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 主要操作按钮样式 -->
        <Style x:Key="PrimaryTouchButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#21618C"/>
                </Trigger>
            </Style.Triggers>
        </Style>



    </UserControl.Resources>

    <StackPanel Margin="5" Background="White">

        <!-- 预设文件选择 -->
        <GroupBox Header="预设文件" Style="{StaticResource GroupBoxStyle}" Foreground="Black" FontSize="16" Height="105">
            <StackPanel>
                <ComboBox ItemsSource="{Binding PresetFiles}"
                          SelectedItem="{Binding SelectedPresetFile}"
                          DisplayMemberPath="Name"
                          Margin="0,0"
                          Foreground="Black"
                          Background="White">       
                    <!-- 定义下拉项的样式 -->
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <!-- 正常状态下的背景色 -->
                            <Setter Property="Background" Value="White"/>
                            <!-- 鼠标悬停时的背景色 -->
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <!-- 选中时的背景色 -->
                            <Setter Property="Background" Value="#E0E0E0"/>
                            <!-- 可选：设置边框或内边距 -->
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="BorderThickness" Value="0"/>

                            <!-- 更精细的状态控制（通过触发器） -->
                            <Style.Triggers>
                                <!-- 鼠标悬停状态 -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F4FD"/>
                                </Trigger>
                                <!-- 选中状态 -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C9E4F7"/>
                                    <Setter Property="Foreground" Value="DarkBlue"/>
                                    <!-- 选中时的文字颜色 -->
                                </Trigger>
                                <!-- 禁用状态 -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                <Button Content="刷新预设" 
                        Height="32"
                        Width="150"
                        FontSize="15"
                        Command="{Binding RefreshPresetsCommand}"
                        Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </GroupBox>

        <!-- 预设详情 -->
        <GroupBox Header="预设详情" 
                  Style="{StaticResource GroupBoxStyle}" 
                  Foreground="Black"
                  FontSize="16" Height="155">
            <ListBox ItemsSource="{Binding SelectedPresetDetails}" 
                         Height="120"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" Margin="2" Foreground="Black"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- 执行状态 -->
        <GroupBox Header="执行状态" 
                  Style="{StaticResource GroupBoxStyle}" 
                  Height="213" 
                  Foreground="Black"
                  FontSize="16">
            <StackPanel Height="173">
                <Border Background="{Binding StatusBackground}" CornerRadius="3" Padding="10" Height="36">
                    <TextBlock Text="{Binding CurrentStage}" 
                                   FontWeight="Bold" 
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>
                </Border>

                <Grid Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="剩余时间:" 
                               Foreground="Black" 
                               Grid.Row="0" 
                               Grid.Column="0" 
                               Margin="0,2" 
                               FontSize="15"/>
                    <TextBlock Text="{Binding TimeRemaining}" 
                               Foreground="Black" 
                               Grid.Row="0" 
                               Grid.Column="1" 
                               Margin="5,2"
                               FontSize="15"/>

                    <TextBlock Text="总运行时间:" 
                               Foreground="Black" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               Margin="0,2"
                               FontSize="15"/>
                    <TextBlock Text="{Binding TotalRunTime}" Foreground="Black" Grid.Row="1" Grid.Column="1" Margin="5,2" FontSize="15"/>

                    <TextBlock Text="完成阶段:" Foreground="Black" Grid.Row="2" Grid.Column="0" Margin="0,2" FontSize="15"/>
                    <TextBlock Text="{Binding CompletedStages}" Foreground="Black" Grid.Row="2" Grid.Column="1" Margin="5,2" FontSize="15"/>

                    <TextBlock Text="当前频率:" Foreground="Black" Grid.Row="3" Grid.Column="0" Margin="0,2" FontSize="15"/>
                    <TextBlock Text="{Binding CurrentFrequency, StringFormat={}{0} Hz}" Foreground="Black" Grid.Row="3" Grid.Column="1" Margin="5,2" FontSize="15"/>

                    <TextBlock Text="当前强度:" Foreground="Black" Grid.Row="4" Grid.Column="0" Margin="0,-1" FontSize="15"/>
                    <!--<TextBlock Text="当前强度:" Foreground="Black" Grid.Row="4" Grid.Column="0" Margin="0,2" Grid.ColumnSpan="2" FontSize="15"/>-->
                    <TextBlock Text="{Binding CurrentIntensity, StringFormat={}{0} %}" Foreground="Black" Grid.Row="4" Grid.Column="1" Margin="5,0" FontSize="15"/>
                </Grid>
                <ProgressBar Value="{Binding ProgressPercentage}" 
                             Height="20" 
                                 />
            </StackPanel>
        </GroupBox>

        <!-- 控制按钮 -->
        <GroupBox Header="控制" Style="{StaticResource GroupBoxStyle}" Foreground="Black" FontSize="16" Height="87" Margin="5,0, 5, 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="261">
                <Button Content="开始" 
                        Command="{Binding StartAutoCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Background="#FF4CAF50"
                        Foreground="Black"
                        Width="120" 
                        Height="45"
                        Margin="0, 0, 0, 0"
                        FontSize="20"
                        />

                <Button Content="停止" 
                        Command="{Binding StopAutoCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Background="#FFF44336"
                        Foreground="Black" 
                        Width="120"
                        Height="45"
                        Margin="20, 0, 0, 0"
                        FontSize="20"/>
            </StackPanel>
        </GroupBox>

    </StackPanel>


</UserControl>
